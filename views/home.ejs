.animation-text {
  display: block;
  padding: 10px 20px;
  margin: 10px auto;
  background-color: #a84caf;
  color: white;
  border-radius: 5px;
  align-items: center;
  opacity: 0;
  animation: fadeInUp 2s forwards, blinkAnimation 2s infinite alternate;
  max-width: 90%;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes blinkAnimation {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}



/* marqueeleft */
.marqueeleft {
    overflow: hidden;
    margin: 8px auto;
    white-space: nowrap; /* Ensure the list items stay in a single line */
    animation: marqueeAnimation 10s linear infinite; /* Adjust the duration as needed */
}

.marqueeleft ul {
    display: inline-block; /* Keep the ul inside the container */
}

.marqueeleft li {
    float: left;
    margin: 0 5px;
    height: 145px;
    overflow: hidden;
    display: inline-block;
    line-height: 145px;
}

.marqueeleft li .pic {
    display: block;
    height: 100%;
    overflow: hidden;
}

.marqueeleft li .pic img {
    border-radius: 5px;
    width: 110px !important;
    vertical-align: middle;
}

.marqueeleft li .txt {
    text-align: center;
    height: 23px;
    line-height: 23px;
}

@keyframes marqueeAnimation {
    0% {
        transform: translateX(0%); /* Start off-screen to the right */
    }
    100% {
        transform: translateX(0%); /* Move off-screen to the left */
    }
}
