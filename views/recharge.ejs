<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <style>
    body{
    background-color: #c9d6ff;
    background: linear-gradient(to right, #e2e2e2, #c9d6ff);
    display: flex;
   
    flex-direction: column;
    height: 100vh;

      background-image: url('/images/background.jpg');
      background-size: cover; /* Adjust to your preference */
   
      @media(max-width: 991px){
        .sidebar{
          background-color: rgba(255, 255, 255, 0.15);
          backdrop-filter: blur(15px);
        }
      }
      /* CSS for VIP badge and layout */
    }
    .profile-container {
            background: linear-gradient(to bottom, #446ad3, #e46be8); /* Gradient background */
            
        }
        .transparent-button {
  background-color: transparent;
  margin-left: 3px;
  margin-top: 0;
  border: none;
  color: white; /* Change the text color as needed */
  cursor: pointer;
}
.custom-file-input {
            color: #fff; /* Change text color */
            background-color: #3498db; /* Change background color */
            border-color: #3498db; /* Change border color */
        }

        .file-input-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            max-width: 70%;
            margin: auto; /* Center the div */
        }

        #imagePopup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            justify-content: center;
            align-items: center;
        }

        #popupContent {
            max-width: 80%;
            max-height: 80%;
        }

        img {
            max-width: 425px;
            max-height: 425px;
        }
  </style>
</head>
<body>
  <%- include('./partials/header'); %>

  <div class="rounded container text-center mt-5 profile-container">
    <!-- WhatsApp Section -->
    <div class="mb-4 mt-4">
        <i class="fab fa-whatsapp fa-5x text-success"></i>
        <h2 class="mt-2">Contact Us</h2>
        <p>via WhatsApp</p>
        <p>Customer Service Timings: Mon-Fri 9:00 AM - 6:00 PM</p>
        <a href="https://wa.me/15746964606"><button class="btn btn-success" style="min-width: 175px;">WhatsApp Us</button>
        </a>
    </div>
    
    <!-- Telegram Section -->
    <div class="mb-4">
        <h2 class="mt-2">Wallet Address</h2>
        <button class="btn btn-primary" style="min-width: 175px;" onclick="displayImage() ">Wallet address</button>
        <div id="imagePopup" onclick="closeImagePopup()">
          <div id="popupContent">
              <img id="myImage" src="/images/telegram.png" alt="Displayed Image">
          </div>
      </div>
    </div>
    <form action="users/upload-payment-proof" method="post" enctype="multipart/form-data">
      <!-- Your existing form content -->
  
      <div class="file-input-container mb-3 text-center">
          <label for="formFile" class="form-label h6">Attach payment proof</label>
          <input class="form-control custom-file-input" type="file" name="paymentProof" id="formFile" required>
      </div>
  
      <button type="submit" class="btn btn-outline-dark mb-2">Send file</button>
  </form>
</div>

  
<%- include('./partials/footer'); %>
<script>
  function displayImage() {
      var popup = document.getElementById("imagePopup");
      popup.style.display = "flex";
  }

  function closeImagePopup() {
      var popup = document.getElementById("imagePopup");
      popup.style.display = "none";
  }
</script>
</script>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>
